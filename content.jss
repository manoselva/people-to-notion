.add-to-notion-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #000;
  color: white;
  border: none;
  border-radius: 16px;
  padding: 6px 16px;
  font-weight: 600;
  cursor: pointer;
  margin-left: 8px;
  transition: background-color 0.2s;
  height: 32px;
  font-size: 14px;
  gap: 5px;
}

.add-to-notion-btn:hover {
  background-color: #333;
}

.add-to-notion-btn svg {
  width: 16px;
  height: 16px;
}
